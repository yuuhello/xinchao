<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Get CRUD</title>
  </head>
  <style>
    table,
    th,
    td {
      border: 1px solid black;
      border-collapse: collapse;
    }

    .btn-edit {
      border-radius: 3px;
      width: 60px;
      cursor: pointer;
      height: 25px;
      border: none;
      outline: none;
      background: orange;
    }
    .btn-delete {
      border-radius: 3px;
      width: 60px;
      cursor: pointer;
      height: 25px;
      border: none;
      outline: none;
      background: orange;
    }
  </style>
  <body>
    <table style="width: 100%">
      <tr>
        <th>email</th>
        <th>firstname</th>
        <th>lastname</th>
        <th>adress</th>
        <th>Action</th>
      </tr>

      <% for(let i=0; i < dataTable.length; i++) { %>
      <tr>
        <td><%= dataTable[i].email %></td>
        <td><%= dataTable[i].firstName %></td>
        <td><%= dataTable[i].lastName %></td>
        <td><%= dataTable[i].address %></td>
        <td>
          <a
            href="/edit-crud?id=<%= dataTable[i].id %> "
            class="btn-edit"
            type="button"
            >Edit</a
          >
          <a
            href="/delete-crud?id=<%= dataTable[i].id %> "
            class="btn-edit"
            type="button"
            >Delete</a
          >
        </td>
      </tr>
      <% } %>
    </table>
  </body>
</html>
